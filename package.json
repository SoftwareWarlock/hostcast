{
  "name": "hostcast",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "babel-preset-react": "~6.1.18",
    "babelify": "~7.2.0",
    "browserify": "~12.0.1",
    "node-sass": "^3.4.2",
    "react": "~0.14.3",
    "react-dom": "~0.14.3",
    "watch": "^0.16.0"
  },
  "scripts": {
    "build-js": "browserify -t [ babelify --presets [ react ] ] react/**.jsx -o django/static/js/bundle.js",
    "build-css": "node-sass --include-path react/scss/** react/scss/main.scss -o django/static/css/",
    "build": "npm run build-js && npm run build-css",
    "watch-js": "watch 'npm run build-js' ./react",
    "watch-css": "watch 'npm run build-css' ./react/scss",
    "watch": "npm run watch-js & npm run watch-css",
    "start-django": "cd django && python manage.py runserver",
    "start": "npm run build && npm run start-django",
    "startw": "npm run watch & npm run start-django"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/SoftwareWarlock/hostcast.git"
  },
  "author": "Cameron Alexander",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/SoftwareWarlock/hostcast/issues"
  }
}
